{
  "name": "taglicious",
  "private": true,
  "version": "0.0.0",
  "description": "Taglicious is a versatile and extensible React component for managing tags and multi-select inputs with customizable rendering and seamless integration with various UI libraries.",
  "author": "Miguel Guedes <miguel@softgeist.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:midsbie/taglicious.git"
  },
  "scripts": {
    "setup": "npm install && cd storybook && npm install",
    "clean": "rm -rf packages/*/dist && git restore packages/*/dist/*",
    "clean:full": "npm run clean && rm -rf node_modules storybook/node_modules packages/*/node_modules",
    "build": "npm run build --ws",
    "version": "npm version --ws --no-workspaces-update --include-workspace-root",
    "package": "npm pack --ws",
    "check": "set -e; for i in code lint fmt; do npm run check:$i; done; echo 'check: PASS'",
    "check:code": "npm run check:tsc && npm run check:lint",
    "check:tsc": "tsc --noEmit",
    "check:tsc:watch": "npm run check:tsc --watch",
    "check:lint": "eslint --color --cache --max-warnings=0 './packages/**/*.{js,ts,tsx}'",
    "check:fmt": "prettier package.json storybook/** './packages/**' '!node_modules/**' '!dist/**' --check --ignore-unknown --no-error-on-unmatched-pattern",
    "fix:fmt": "npm run check:fmt -- --write"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^8.57.0",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5",
    "rollup": "^4.18.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.77.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.0"
  }
}
